{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "jest.config.ts",
    "jest.config.cts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.d.ts",
    "test/types/**/*.d.ts"
  ]
}
